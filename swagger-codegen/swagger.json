{
  "swagger": "2.0",
  "info": {
    "description": "Manage skills in bpm-skills-project",
    "version": "0.0.1",
    "title": "BPM Skills API"
  },
  "host": "localhost:9081",
  "basePath": "/skills-service/",
  "tags": [
    {
      "name": "skill-controller",
      "description": "Skill Controller"
    }
  ],
  "schemes": [
    "http"
  ],
  "paths": {
    "/skills": {
      "get": {
        "tags": [
          "skill-controller"
        ],
        "summary": "Return a list of all skills",
        "operationId": "getAllSkillsUsingGET",
        "consumes": [
          "application/json"
        ],
        "produces": [
          "application/json"
        ],
        "responses": {
          "200": {
            "description": "Skills successfully returned",
            "schema": {
              "type": "array",
              "items": {
                "$ref": "#/definitions/Skill"
              }
            }
          },
          "401": {
            "description": "Unauthorized"
          },
          "403": {
            "description": "Forbidden"
          },
          "404": {
            "description": "Not Found"
          }
        }
      },
      "post": {
        "tags": [
          "skill-controller"
        ],
        "summary": "Create a new skill",
        "operationId": "createSkillUsingPOST",
        "consumes": [
          "application/json"
        ],
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "in": "body",
            "name": "skill",
            "description": "skill",
            "required": true,
            "schema": {
              "$ref": "#/definitions/Skill"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "schema": {
              "$ref": "#/definitions/Skill"
            }
          },
          "201": {
            "description": "Skill successfully created",
            "schema": {
              "$ref": "#/definitions/Skill"
            }
          },
          "401": {
            "description": "Unauthorized"
          },
          "403": {
            "description": "Forbidden"
          },
          "404": {
            "description": "Not Found"
          }
        }
      }
    },
    "/skills/{id}": {
      "get": {
        "tags": [
          "skill-controller"
        ],
        "summary": "Return one skill",
        "operationId": "getSkillUsingGET",
        "consumes": [
          "application/json"
        ],
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "id",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "Skill successfully returned",
            "schema": {
              "$ref": "#/definitions/Skill"
            }
          },
          "401": {
            "description": "Unauthorized"
          },
          "403": {
            "description": "Forbidden"
          },
          "404": {
            "description": "Not Found"
          }
        }
      },
      "put": {
        "tags": [
          "skill-controller"
        ],
        "summary": "Update a skill",
        "operationId": "updateSkillUsingPUT",
        "consumes": [
          "application/json"
        ],
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "id",
            "required": true,
            "type": "string"
          },
          {
            "in": "body",
            "name": "skillDetails",
            "description": "skillDetails",
            "required": true,
            "schema": {
              "$ref": "#/definitions/Skill"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Skill successfully updated",
            "schema": {
              "$ref": "#/definitions/Skill"
            }
          },
          "201": {
            "description": "Created"
          },
          "401": {
            "description": "Unauthorized"
          },
          "403": {
            "description": "Forbidden"
          },
          "404": {
            "description": "The skill to update was not found"
          }
        }
      },
      "delete": {
        "tags": [
          "skill-controller"
        ],
        "summary": "Delete a skill",
        "operationId": "deleteSkillUsingDELETE",
        "consumes": [
          "application/json"
        ],
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "id",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "schema": {
              "type": "object"
            }
          },
          "204": {
            "description": "Skill successfully deleted",
            "schema": {
              "type": "object"
            }
          },
          "401": {
            "description": "Unauthorized"
          },
          "403": {
            "description": "Forbidden"
          },
          "404": {
            "description": "The skill to delete was not found"
          }
        }
      }
    }
  },
  "definitions": {
    "Iterable": {
      "type": "object"
    },
    "Skill": {
      "type": "object",
      "properties": {
        "description": {
          "type": "string"
        },
        "id": {
          "type": "string"
        },
        "name": {
          "type": "string"
        }
      }
    }
  }
}
